<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey_chill"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile_img"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:src="@drawable/ic_launcher_background"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       app:civ_border_width="1dp"
       app:civ_border_color="#ffffff"
       />
    <TextView
        android:id="@+id/tv_name_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize"
        tools:text="Adarsh Kumar"
        android:layout_below="@id/civ_profile_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_desc_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize"
        tools:text="Details will apear here!"
        android:layout_below="@id/tv_name_teacher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <android.support.v7.widget.CardView
        android:layout_below="@id/tv_desc_teacher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:elevation="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_add_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Post Updates"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:id="@+id/tv_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Attendance"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:id="@+id/tv_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Todo Preclass / Notifify students"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:id="@+id/tv_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Upload notes and materials"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:id="@+id/tv_assignments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="Assignments"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:id="@+id/tv_subs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="My Subs/ Students"
                android:textSize="@dimen/textsize"
                />
            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="LOGOUT"
                android:textSize="@dimen/textsize"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>