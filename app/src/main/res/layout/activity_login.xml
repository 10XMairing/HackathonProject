<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_student_logn"
        android:text="Classrooms with Android"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_student_logn"
        android:layout_above="@id/btn_teacher_login"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student LogIn"
        />
    <Button
        android:id="@+id/btn_teacher_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher Login"
        android:layout_centerInParent="true"
        />



</RelativeLayout>